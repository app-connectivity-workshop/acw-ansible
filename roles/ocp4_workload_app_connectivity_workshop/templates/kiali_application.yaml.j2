---
apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: kiali-system
  namespace: {{ ocp4_workload_app_connectivity_workshop_argocd_namespace }}
  finalizers:
    - resources-finalizer.argocd.argoproj.io/foreground
spec:
  destination:
    server: 'https://kubernetes.default.svc'
    namespace: kiali-system
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - ApplyOutOfSyncOnly=true
      - CreateNamespace=true
  source:
    repoURL: {{ ocp4_workload_app_connectivity_workshop_gitops_repo }}
    targetRevision: {{ ocp4_workload_app_connectivity_workshop_gitops_repo_tag }}
    path: {{ ocp4_workload_app_connectivity_workshop_kiali_gitops_repo_path }}
    helm:
      values: |
          subscription:
            channel: stable
            installPlanApproval: Automatic
            name: kiali-ossm
            source: redhat-operators
            sourceNamespace: openshift-marketplace